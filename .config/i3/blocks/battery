# i3blocks script to get the battery information
battery="/sys/class/power_supply/BAT?"

state=$(cat $battery/status)
capacity=$(cat $battery/capacity | sed "s/$/%/g")

[ $state = "Discharging" ] && icon="ðŸ”‹"
[ $state = "Charging" ] && icon="ðŸ”Œ"
[ $state = "Full" ] && icon="âš¡"

echo "$icon $capacity"

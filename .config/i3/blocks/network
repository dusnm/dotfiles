# i3blocks script to print the current private IP address of the network interface
interface="enp2s0"
icon="ğŸŒ"

ip_address=$(ip addr show $interface | grep 192 | awk '{print $2}' | sed "s/...$//g")

[ -z "$ip_address" ] && echo "$icon Unplugged." || echo "$icon $ip_address"

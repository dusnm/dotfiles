# i3blocks script to get the RAM information
icon="ðŸ§ "

case $BLOCK_BUTTON in
	1) notify-send "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
esac

echo "$icon $(free -h | awk '/^Mem/ {print $3 "/" $2}')"
